@model GymTool.Areas.Users.Models.InputModelLogin
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container p-4" >
    <div class="row" >
        <div class="col-md-6 mx-auto" style="min-width:300px">
            <div class="card text-center login_box">
                <div class="card-header">
                    <h2>Iniciar Sesi&#243;n</h2>
                </div>
                &nbsp;
                <img src="~/images/images/default.png" class="mx-auto w-25">
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Index" method="POST">
                        <div class="form-group">
                            <p>Correo electr&#243;nico:</p>
                            <input asp-for="Email" placeholder="Correo" class="form-control" autocomplete="off" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <p>Contrase&#241;a:</p>
                            <input asp-for="Password" placeholder="Contraseña" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span class="text-danger">
                                @Html.DisplayFor(m => m.ErrorMessage)
                            </span>
                        </div>
                        <button class="btn btn-primary btn-block" title="Iniciar sesi&oacute;n">
                            Iniciar Sesi&oacute;n
                        </button>
                        @*<a href="">Olvid&eacute; mi contraseña</a>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
