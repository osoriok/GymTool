@model DataPaginador<InputModelRegister>
@{
    ViewData["Title"] = "Personal";
    var accion = "../../images/system/accion.png";

}


<div class="container p-4">
    <div class="row">
        <div class="col">
            <h1>Empleados</h1>
        </div>
        <div class="col">
            <div class="form-group float-right" style="margin-top: 15px;">
                <div class="form-group">
                    <a class="btn btn-primary text-white" asp-area="Users" asp-page="/Account/Register">Agregar</a>
                </div>

            </div>

        </div>
    </div>

    <div class="row">

        <div class="form-group">
            <form asp-area="Users" asp-controller="Users" asp-action="Users" method="get">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="text" id="filtrar" name="filtrar" placeholder="Buscar" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <input type="submit" value="Buscar" class="btn btn-success">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md">

                        </div>
                    </div>

                </div>
            </form>
        </div>
        &nbsp;
        <div class="form-group ">
            <form asp-area="Users" asp-controller="Users" asp-action="Users" method="get">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="number" name="registros" class="form-control" value="25" min="1" max="50" step="1">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-4">
                            <input type="submit" class="btn btn-success" value="Registros">
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>



    <div class="row">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Tel&eacute;fono</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Acci&oacute;n</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.List)
                {
                    <tr>

                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono) </td>
                        <td>@Html.DisplayFor(modelItem => item.Correo) </td>
                        <td>
                            <a asp-route-id="@item.IdUsers" asp-area="Users" asp-page="/Account/Details">
                                <center><img class='imageUsers' src="@accion" /></center>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
    <div class="text-center">
        Resultados @Html.Raw(Model.Pagi_info)
        <br />
        @Html.Raw(Model.Pagi_navegacion)
    </div>
