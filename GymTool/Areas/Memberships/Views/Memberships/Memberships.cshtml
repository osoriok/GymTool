@model DataPaginador<InputModelRegister>
@{
    ViewData["Title"] = "Membresías";
    var accion = "../../images/system/accion.png";
}


<div class="container p-4" style="min-width: 340px">


    <div class="row">
        <div class="col" style="text-align:left">
            <h1>Membres&iacute;as</h1>
        </div>
        <div class="col">
            <div class="form-group float-right" style="margin-top: 15px;">
                <div class="form-group">
                    <a title="Agregar" class="btn btn-primary text-white" asp-area="Memberships" asp-page="/Account/Register">Agregar</a>
                </div>

            </div>

        </div>
    </div>

    <div class="row">

        <div class="form-group">
            <form asp-area="Memberships" asp-controller="Memberships" asp-action="Memberships" method="get">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="text" id="filtrar" name="filtrar" placeholder="Buscar" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <input type="submit" title="Buscar" value="Buscar" class="btn btn-success">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md">

                        </div>
                    </div>

                </div>
            </form>

        </div>
        <div class="form-group">
            <form asp-area="Memberships" asp-controller="Memberships" asp-action="Memberships" method="get">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="number" name="registros" class="form-control" value="25" min="1" max="50" step="1">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-4">
                            <input type="submit" title="Registros" class="btn btn-success" value="Registros">
                        </div>
                    </div>
                </div>

            </form>


        </div>



    </div>

    <div class="row">
        <div class="tablescroll">

            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Monto</th>
                        <th scope="col">Periodo</th>
                        <th scope="col">Acci&oacute;n</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.List)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Monto) </td>
                            <td>@Html.DisplayFor(modelItem => item.Cantidad) @Html.DisplayFor(modelItem => item.Periodo) </td>
                            <td>
                                <a asp-route-id="@item.IdMembresia" asp-area="Memberships" asp-page="/Account/Details">
                                    <center><img title="Informaci&oacute;n" class='imageUsers' src="@accion" /></center>
                                </a>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<div class="text-center">
    Resultados @Html.Raw(Model.Pagi_info)
    <br />
    @Html.Raw(Model.Pagi_navegacion)
</div>
